= form_for @user, url: step2_signup_index_path, method: :get, html: {class: 'first-main__box'} do |f|
  = f.text_field :nickname, placeholder: '例) メルカリ太郎'
  = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
  = f.password_field :password, placeholder: '6文字以上'
  = f.password_field :password_confirmation, placeholder: '確認入力'
  = f.text_field :family_name, placeholder: '例) 山田'
  = f.text_field :last_name, placeholder: '例) 彩'
  = f.text_field :family_name_kana, placeholder: '例) ヤマダ'
  = f.text_field :last_name_kana, placeholder: '例) アヤ'
  = f.date_select :birth_date, use_month_numbers: true,start_year: 1960, end_year: (Time.now.year - 10), default: Date.new(1985, 1, 1)
  = f.submit 